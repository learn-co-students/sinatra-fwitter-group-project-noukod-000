<div class="container d-flex p-5">
    <div class="col-lg-4 col-md-12">
    </div>
    <div class="col-lg-4 col-md-12">
    
    <% if flash[:error] %>
        <div id="success" style="color:rgba(255,255,255,1);">
        <%= flash[:error] %>
        </div>
        <br>
    <% end %>
    
        <div class="">
            <form action="signup" method="post">
                <div class="form-group">
                    <label class="form-control-label">Name</label>
                    <input type="text" name="name" class="form-control" placeholder="Full name">
                    <span class="small">Put your name here</span>
                </div>

                <div class="form-group">
                    <label class="form-control-label">Email</label>
                    <input type="email" name="email" class="form-control" placeholder="Email">
                    <span class="small">Put your email here</span>
                </div>

                <div class="form-group">
                    <label class="form-control-label">Password</label>
                    <input type="password" name="password" class="form-control" >
                    <span class="small">Put your password here</span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info btn-sm">Sign up</button>
                    <a href="/" class="float-right pt-2">Login</a>
                </div>

            </form>
        </div>
    </div>
    <div class="col-lg-4 col-md-12">
    </div>
</div>