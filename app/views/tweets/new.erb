<div class="container d-flex p-5">
    <div class="col-lg-4 col-md-12">
    </div>
    <div class="col-lg-4 col-md-12">
    
    <% if flash[:error] %>
        <div id="success" style="color:rgba(255,255,255,1);">
        <%= flash[:error] %>
        </div>
        <br>
    <% end %>
    
        <div class="">
                <h2>New tweet</h2>
            <form action="/tweets" method="post" enctype="multipart/form-data">
                
                 <div class="form-group">
                    <div class="input-group mb-3">

                            <p>Content: <input type="text" name="content"></p>
                    
                        <div class="input-group-append">
                            <button type="submit" value="submit" class="input-group-text" id="">Add Tweet</button>
                        </div>
                    </div>
                </div>

            </form>

        </div>
    </div>
    <div class="col-lg-4 col-md-12">
    </div>
</div>